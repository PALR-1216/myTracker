</script>


<div class="table-responsive-sm">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Hours</th>
                <th scope="col">Total $</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>

            <% for(const row of model) {%>
            <tr>
                <th scope="row"><%=row.id%></th>
                <td><%=row.hours.toFixed(2)%></td>
                <td><%= row.total_ganado.toFixed(2)%></td>
                <!-- <td><form action="/deleteRow/<%=row.id%>"><input id="row" type="submit" value="delete"></form></td> -->
                <td><a href="/deleteRow/<%=row.id%>" id="row">delete</a></td>
                <script>
                    var row = document.getElementById("row")
                    row.addEventListener('click', () =>{
                        window.location.reload()
                    })
                </script>

            </tr>
            <% }%>

        </tbody>
    </table>

    <a href="/delete" class="link-primary" style="padding-left: 20px;">Reset data</a>
</div>